}
QPushButton#sendToolBtn
{
border-image: url(:/res/tfile.png);
}
QPushButton#pushButton_clear
{
border-image: url(:/res/clear.png);
}
QPushButton#pushButton_min:hover,#sendToolBtn:hover,#pushButton_clear:hover
{
